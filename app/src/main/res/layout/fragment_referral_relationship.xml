                        android:layout_marginLeft="16dp"/>-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center|left"
                        android:text="Referrals"
                        android:textColor="#6AA2B8"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_close_button"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginTop="22dp"
                        android:background="@drawable/close" />

                </RelativeLayout>

               <!-- <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/referraal_relationship"
                    android:layout_centerInParent="true"/>-->

                <TextView
                    android:id="@+id/tv_request_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Relationship"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_request_heading"
                    android:layout_marginLeft="58dp"
                    android:layout_marginRight="58dp"
                    android:gravity="center"
                    android:text="What is your relationship?"
                    android:textColor="#6AA2B8"
                    android:textSize="20dp" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_friend"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="43dp"
            android:paddingRight="43dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25sp"
            android:text="Friend"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="#6AA2B8"
            android:background="@drawable/appointment_btn_corner" />

        <Button
            android:id="@+id/btn_family"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="43dp"
            android:paddingRight="43dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Family"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="#6AA2B8"
            android:background="@drawable/appointment_btn_corner" />

        <Button
            android:id="@+id/btn_other_associates"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="43dp"
            android:paddingRight="43dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Other Associates"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="#6AA2B8"
            android:background="@drawable/appointment_btn_corner" />
    </LinearLayout>


