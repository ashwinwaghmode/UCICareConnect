<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#1B3D6D">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_bottom_shadow">

           <!-- <ImageView
                android:layout_marginTop="22dp"
                android:id="@+id/img_back_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/back_arrow"
                android:layout_marginLeft="16dp"/>-->

           <!-- <TextView
                android:id="@+id/tv_heading"
                android:textColor="#6AA2B8"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/password"
                android:layout_marginLeft="15dp"
                android:gravity="center|left"/>

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dp"
                android:layout_marginTop="22dp"
                android:id="@+id/img_back_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/close"
                android:layout_marginLeft="16dp"/>-->

            <ImageView
                android:layout_marginTop="22dp"
                android:id="@+id/img_back_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/back_arrow"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/tv_heading"
                android:textColor="#6AA2B8"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:text="Password"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"/>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/edit_create_password"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:paddingRight="13dp"
            android:paddingLeft="13dp"
            android:paddingTop="28dp"
            android:paddingBottom="28dp"
            android:hint="Choose Password"
            android:textColorHint="#C6BEB5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="start"
            android:maxLines="1"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#555759"
            android:maxLength="20"
            android:background="@drawable/edit_text_background"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_create_password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Your Password"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#555759"
            android:textSize="14dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:visibility="gone"
                android:id="@+id/edit_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:paddingRight="13dp"
                android:paddingLeft="13dp"
                android:paddingTop="28dp"
                android:paddingBottom="28dp"
                android:hint="Re-enter Password"
                android:textColorHint="#C6BEB5"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="start"
                android:maxLines="1"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#555759"
                android:background="@drawable/edit_text_background"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_confirm_password_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/please_confirm_your_password"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#555759"
                android:textSize="14dp"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="17dp"
            android:id="@+id/ll_password_condition">

        <TextView
            android:id="@+id/tv_password_requirement_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password Requirements"
            android:textSize="20dp"
            android:textColor="#6AA2B8"/>

        <TextView
            android:id="@+id/tv_minimum_characters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Minimum eight characters"
            android:layout_marginLeft="17dp"
            android:textSize="14dp"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/tv_special_characters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Minimum one special character"
            android:layout_marginLeft="17dp"
            android:textSize="14dp"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/tv_one_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Minimum one number"
            android:layout_marginLeft="17dp"
            android:textSize="14dp"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/tv_upplow_char"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Must have upper and lower case characters"
            android:layout_marginLeft="17dp"
            android:textSize="14dp"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/tv_chaaractrs_pair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Max one pair of repeating characters"
            android:layout_marginLeft="17dp"
            android:textSize="14dp"
            android:textColor="#FFFFFF"/>
        
        <!--<ImageView
            android:layout_width="336dp"
            android:layout_height="126dp"
            android:background="@drawable/create_password"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="17dp"
            android:layout_marginEnd="22dp"
            android:layout_marginStart="17dp" />-->
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_next"
        android:layout_gravity="center"
        android:layout_width="259dp"
        android:layout_marginBottom="62dp"
        android:layout_height="60dp"
        android:layout_marginRight="58dp"
        android:layout_marginLeft="58dp"
        android:text="Next"
        android:textSize="20dp"
        android:textColor="#707B7C"
        android:textAllCaps="false"
        android:enabled="false"
        android:background="@drawable/referral_button_background"/>
</RelativeLayout>