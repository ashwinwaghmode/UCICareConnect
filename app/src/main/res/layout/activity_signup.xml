<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1B3D6D">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_one"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:background="@drawable/header" />

          <!--  <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13.69dp">

                <ImageView
                    android:id="@+id/icon_one"
                    android:layout_width="23.54dp"
                    android:layout_height="16.49dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icon" />
            </RelativeLayout>

            <ImageView
                android:layout_width="151dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/uci_logo" />-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

            <EditText
                android:id="@+id/edit_user_name"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="start"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_text_background"
                android:gravity="center"
                android:hint="Enter Your Username"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="28dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="28dp"
                android:textColor="#555759"
                android:textColorHint="#C6BEB5"
                android:textSize="20dp"
                android:focusableInTouchMode="true"
                android:textStyle="bold" >
                <requestFocus />
            </EditText>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_username_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Activation Code"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="#555759"
                    android:textSize="14dp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40px">

            <CheckBox
                android:id="@+id/check_bx_user_name"
                android:button="@drawable/custom_checkbox"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="24dp" />

                <TextView
                    android:id="@+id/tv_remember_me"
                    android:layout_marginLeft="9dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Remember Me"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_forgot_user_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="58dp"
                android:layout_marginRight="58dp"
                android:layout_marginTop="18px"
                android:gravity="center"
                android:text="Forgot Username?"
                android:textColor="#6AA2B8"
                android:textSize="18dp" />

        </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_sign_in"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="62dp"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="58dp"
        android:background="@drawable/referral_button_background"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#707B7C"
        android:textSize="20dp"
        android:enabled="false"/>

</RelativeLayout>
