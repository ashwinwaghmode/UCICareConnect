<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SchedulingActivity"
    android:background="#1B3D6D">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_bottom_shadow">

            <!-- <ImageView
                 android:layout_marginTop="22dp"
                 android:id="@+id/img_back_arrow"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:background="@drawable/back_arrow"
                 android:layout_marginLeft="16dp"/>-->

            <TextView
                android:textColor="#6AA2B8"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_height="60dp"
                android:text="Referrals"
                android:gravity="center|left"/>

            <ImageView
                android:id="@+id/img_close_button"
                android:layout_marginTop="22dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/close"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="16dp"/>

            <!--  <ImageView
                  android:layout_marginTop="22dp"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:background="@drawable/close"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="17dp"
                  android:layout_marginLeft="16dp"/>-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <TextView
                android:layout_width="354dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="Referral Completed"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

            <!--<ImageView
                android:layout_width="25.5dp"
                android:layout_height="25.5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/edit_icon"
                android:layout_marginRight="14.5dp"/>-->
        </RelativeLayout>

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="195dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:text="Name"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/tv_referral_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#6AA2B8"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="18.8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Relationship"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/tv_relationship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#6AA2B8"/>

                </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="18.8dp"
                android:id="@+id/ll_associate_name">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Associate"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/tv_associate_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#6AA2B8"/>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="18.8dp"
                android:id="@+id/ll_family_relation">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Family Relation"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/tv_family_relation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#6AA2B8"/>

            </LinearLayout>

                <TextView
                    android:layout_marginTop="18.8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#6AA2B8"/>

                <TextView
                    android:layout_marginTop="18.8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email (Optional)"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/tv_email_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#6AA2B8"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/layout_curve_background"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_make_another_referral"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="43dp"
                android:paddingRight="43dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Make Another Referral"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="#6AA2B8"
                android:background="@drawable/appointment_btn_corner" />

            <LinearLayout
                android:layout_marginTop="18dp"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="18dp">


                <ImageView
                    android:id="@+id/img_btn_chat"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/chat"
                    android:gravity="center"
                    android:textColor="#6AA2B8"
                    android:textSize="14dp"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/img_btn_call"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/call"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#6AA2B8"
                    android:textSize="14dp"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btn_send_request"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Referral"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:textColor="#6AA2B8"
                    android:background="@drawable/appointment_btn_corner" />

            </LinearLayout>

          <!--  <Button
                android:id="@+id/btn_send_request"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/appointment_btn_corner"
                android:paddingLeft="43dp"
                android:paddingRight="43dp"
                android:text="Send Referral"
                android:textAllCaps="false"
                android:textColor="#6AA2B8"
                android:textSize="20dp" />-->
        </LinearLayout>

       <!-- <ImageView
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_need_help"
            android:layout_width="160dp"
            android:layout_height="15dp"
            android:background="@drawable/need_help_blue"
            android:gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="33px"
            android:textColor="#6AA2B8"
            android:textSize="14dp"
            android:layout_gravity="center"/>-->


    </RelativeLayout>

</RelativeLayout>