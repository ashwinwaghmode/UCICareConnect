<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rel_pop_up"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24.58dp"
                android:layout_height="26dp"
                android:layout_marginLeft="19.3dp"
                android:background="@drawable/sch" />

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.11dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#555759"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_event_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#555759"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_event_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#555759"
                    android:textSize="14dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:gravity="center"
                        android:text="Dr. Jack"
                        android:id="@+id/tv_doctor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#6AA2B8"
                        android:textSize="14dp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="today in 59 minutes"
                        android:id="@+id/tv_appointment_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#555759"
                        android:textSize="14dp" />

                </LinearLayout>


            </LinearLayout>


            <ImageView
                android:id="@+id/img_call_btn"
                android:layout_marginRight="19.3dp"
                android:layout_width="24.58dp"
                android:layout_height="26dp"
                android:background="@drawable/phone" />

        </LinearLayout>


        <!--<Button
            android:id="@+id/btn_view_referral_details"
            android:layout_width="248dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_corner_button"
            android:text="View Referral Details"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:visibility="visible" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progress"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible" />


            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_instruction"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/appointment_btn_corner"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:textAllCaps="false"
                android:textColor="#6AA2B8"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instructions for Appointment"
                android:textColor="#555759"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_reschedule"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/appointment_btn_corner"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reschedule"
                android:textAllCaps="false"
                android:textColor="#6AA2B8"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Need to reschedule or cancel your request?"
                android:textColor="#555759"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_cancel"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/appointment_btn_corner"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#6AA2B8"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Need to cancel your appointment?"
                android:textColor="#555759"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>