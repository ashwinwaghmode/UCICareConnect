<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1B3D6D">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_bottom_shadow">

                <ImageView
                    android:layout_marginTop="22dp"
                    android:id="@+id/img_back_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/back_arrow"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:id="@+id/tv_heading"
                    android:textColor="#6AA2B8"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="260dp"
                    android:layout_height="60dp"
                    android:text="@string/password"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"/>

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

            <EditText
                android:background="@drawable/edit_text_background"
                android:id="@+id/edit_sign_up_password"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:hint="Enter Your Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingBottom="28dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="28dp"
                android:textColor="#555759"
                android:textColorHint="#C6BEB5"
                android:textSize="20dp"
                android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_mike"
                    android:layout_marginRight="15dp"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:background="@drawable/mike"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_sign_up_password_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Your Password"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="#555759"
                    android:textSize="14dp"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_forgot_password_msg"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="58dp"
                android:layout_marginRight="58dp"
                android:layout_marginTop="39dp"
                android:gravity="center"
                android:text="Forgot Your Password?"
                android:textColor="#6AA2B8"
                android:textSize="18dp" />

        </LinearLayout>

        <Button
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="62dp"
            android:layout_marginLeft="58dp"
            android:layout_marginRight="58dp"
            android:background="@drawable/referral_button_background"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="#707B7C"
            android:textSize="20dp"
            android:enabled="false"/>
    </RelativeLayout>