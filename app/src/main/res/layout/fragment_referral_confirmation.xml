<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B3D6D">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_bottom_shadow">

                   <!-- <ImageView
                        android:layout_marginTop="22dp"
                        android:id="@+id/img_back_arrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/back_arrow"
                        android:layout_marginLeft="16dp"/>-->

                    <TextView
                        android:textColor="#6AA2B8"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_height="60dp"
                        android:text="Referrals"
                        android:gravity="center|left"/>

                    <ImageView
                        android:id="@+id/img_close_button"
                        android:layout_marginTop="22dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/close"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="17dp"
                        android:layout_marginLeft="16dp"/>

                </RelativeLayout>

            <ImageView
                android:layout_marginTop="26dp"
                android:layout_width="180dp"
                android:layout_height="177dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_referrals"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmation"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="14dp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:text="We'all contact corbin about an appointment at UCi Health. Please tap confirm if Corbin is aware we will be in touch."
                android:gravity="center"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:layout_marginTop="11.26dp"
                android:textSize="20dp"
                android:textColor="#6AA2B8" />
        </LinearLayout>

    <Button
        android:layout_centerInParent="true"
        android:layout_above="@id/tv_need_help"
        android:id="@+id/btn_confirm"
        android:layout_width="171dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:background="@drawable/referral_button_background"
        android:paddingBottom="20dp"
        android:paddingLeft="43dp"
        android:paddingRight="43dp"
        android:paddingTop="18dp"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />


    <ImageView
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_need_help"
        android:layout_width="160dp"
        android:layout_height="15dp"
        android:background="@drawable/need_help_white"
        android:gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="33px"
        android:textColor="#6AA2B8"
        android:textSize="14dp"
        android:layout_gravity="center"/>
</RelativeLayout>